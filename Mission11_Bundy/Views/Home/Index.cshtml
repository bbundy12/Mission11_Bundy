@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<h1>Book Store</h1>
@foreach (Book b in Model.Books)
{
    <div class="card mb-3">
        <h5 class="card-title bg-dark text-white p-2 display-6">@b.Title</h5>
        <div class="card-body">
            <div class="row">
                <!-- First column for Author, Publisher, ISBN, Classification -->
                <div class="col-md-6">
                    <p class="card-text"><strong>Author:</strong> @b.Author</p>
                    <p class="card-text"><strong>Publisher:</strong> @b.Publisher</p>
                    <p class="card-text"><strong>ISBN:</strong> @b.Isbn</p>
                    <p class="card-text"><strong>Classification:</strong> @b.Classification</p>
                </div>
                <!-- Second column for Category, Number of Pages, Price -->
                <div class="col-md-6">
                    <p class="card-text"><strong>Category:</strong> @b.Category</p>
                    <p class="card-text"><strong>Number of Pages:</strong> @b.PageCount</p>
                    <p class="card-text"><strong>Price:</strong> $@b.Price</p>
                </div>
            </div>
        </div>
    </div>

}



<div page-model="@Model.PaginationInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
